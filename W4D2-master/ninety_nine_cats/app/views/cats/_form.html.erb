<% 
if type == :new 
  action = cats_url 
  button_txt = 'Create Cat'
else 
  action = cat_url(cat)
  button_txt = 'Update Cat'
end 
%>

<form action="<%= action %>" method="post">
  <% if type == :edit %>
  <input type="hidden" name="_method" value="patch">
  <% end %>
  <label for="name">
    Name:
    <input id="name"
      type="text"
      name="cat[name]"
      value="<%= cat.name %>">
  </label>
  <label for="sex">
    M 
    <input id="male"
      type="radio"
      name="cat[sex]"
      value="M"
      "<% if cat.sex == 'M' %>" checked "<% end %>">
  </label>
  <label for="sex">
    F 
    <input id="female"
      type="radio"
      name="cat[sex]"
      value="F"
      "<% if cat.sex == 'F' %>" checked "<% end %>">
  </label>
  <label for="color">
    Color:
    <select name="cat[color]">
      <% Cat::COLORS.each do |color| %>
      <option value="<%= color %>"> <%= color %> </option>
        <% end %>
    </select>
  </label>
  
  <label for="birth_date">
    Birth Date:
    <input id="birth_date"
      type="date"
      name="cat[birth_date]"
      value="<%= cat.birth_date %>">
  </label>
  
  
  <label for="description">
    Description:
    <textarea name="cat[description]" rows="8" cols="25"><%= cat.description %></textarea>
    
  </label>
  
   <input type="submit" value=" <%= button_txt %>">

</form>